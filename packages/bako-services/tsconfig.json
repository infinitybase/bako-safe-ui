{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@wallet/*": ["../bako-wallet/src/*"]
    },
    "lib": ["dom", "esnext"],
    "types": ["react", "node"]
  },
  "include": ["src/**/*", "../bako-wallet/src/*"],
  "exclude": ["node_modules", "dist"]
}
